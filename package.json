{
  "name": "@rcuse/monorepo",
  "type": "module",
  "version": "0.25.0",
  "private": true,
  "packageManager": "pnpm@9.9.0",
  "description": "Collection of essential React Utilities",
  "author": "wangxingkang <https://github.com/wangxingkang>",
  "license": "MIT",
  "scripts": {
    "build": "walrus build-run",
    "build:rollup": "NODE_OPTIONS=\"--max-old-space-size=6144\" rollup --config=rollup.config.ts --configPlugin=rollup-plugin-esbuild",
    "docs": "pnpm -r --filter website run start",
    "docs:build": "pnpm -r --filter website run build",
    "clean": "rimraf --glob dist types \"packages/*/dist\"",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "sb": "pnpm --filter @rcuse/storybook start",
    "build:sb": "pnpm --filter @rcuse/storybook build",
    "start:sb": "pnpm --filter @rcuse/storybook start",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix",
    "publish:ci": "walrus publish",
    "release": "bumpp --execute=\"npm run release:prepare\" --all",
    "release:prepare": "npm run update",
    "metadata": "walrus metadata",
    "update": "walrus update",
    "watch": "walrus build-run --watch",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@antfu/ni": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@rcuse/core": "workspace:*",
    "@rcuse/integrations": "workspace:*",
    "@rcuse/metadata": "workspace:*",
    "@rcuse/shared": "workspace:*",
    "@rollup/plugin-json": "catalog:",
    "@rollup/plugin-replace": "catalog:",
    "@testing-library/dom": "catalog:",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "bumpp": "catalog:",
    "chalk": "catalog:",
    "consola": "catalog:",
    "cross-spawn": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-react": "catalog:",
    "eslint-plugin-react-hooks": "catalog:",
    "eslint-plugin-react-refresh": "catalog:",
    "export-size": "catalog:",
    "fake-indexeddb": "catalog:",
    "fast-glob": "catalog:",
    "fs-extra": "catalog:",
    "gray-matter": "catalog:",
    "husky": "catalog:",
    "jsdom": "catalog:",
    "lint-staged": "catalog:",
    "msw": "catalog:",
    "node-fetch": "catalog:",
    "ora": "catalog:",
    "plop": "catalog:",
    "prettier": "catalog:",
    "raf-stub": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "rimraf": "catalog:",
    "rollup": "catalog:",
    "rollup-plugin-dts": "catalog:",
    "rollup-plugin-esbuild": "catalog:",
    "rollup-plugin-pure": "catalog:",
    "simple-git": "catalog:",
    "taze": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "walrus": "workspace:*"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --cache --fix"
    ]
  }
}
