{
  "compilerOptions": {
    "target": "es2020",
    "jsx": "react",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "webworker"],
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "paths": {
      "@rcuse/core": ["./packages/core/index.ts"],
      "@rcuse/core/*": ["./packages/core/*"],
      "@rcuse/shared": ["./packages/shared/index.ts"],
      "@rcuse/shared/*": ["./packages/shared/*"],
    },
    "resolveJsonModule": true,
    "types": [
      "vitest"
    ],
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationDir": "./types",
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts",
    "packages",
    "vitest.config.ts",
    "./tests/jest-setup.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.md",
    "**/dist"
  ]
}
